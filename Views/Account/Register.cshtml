@model CookieAuth.Models.RegisterModel

<h2>Регистрация</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Введите Email"/>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
             <label asp-for="Name">Введите свое имя</label>
             <input type="text" asp-for="Name" class="form-control" placeholder="Введите свое имя"/>
             <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" class="form-control" placeholder="Введите пароль"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirmation">Повторите пароль</label>
            <input asp-for="PasswordConfirmation" class="form-control" placeholder="Повторите пароль"/>
            <span asp-validation-for="PasswordConfirmation" />
        </div>
        <div class="form-group">
            <input type="submit" value="Регистрация" class="btn btn-outline-dark"/>
        </div>
    </div>
</form>
